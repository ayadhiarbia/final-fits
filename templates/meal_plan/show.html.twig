<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ meal_plan.title }} - FitFlow Meal Plan</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --food-gradient: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            --health-gradient: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
            --protein-gradient: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
            --carb-gradient: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            --fat-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --breakfast-gradient: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
            --lunch-gradient: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
            --dinner-gradient: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
            --dark-bg: #0f172a;
            --light-text: #f8fafc;
            --card-bg: rgba(255, 255, 255, 0.95);
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(-45deg, #ffecd2, #fcb69f, #a1c4fd, #c2e9fb);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            min-height: 100vh;
            color: #333;
            padding-bottom: 60px;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Back Button */
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 30px;
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            padding: 15px 30px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .back-btn:hover {
            gap: 18px;
            background: rgba(255, 255, 255, 0.2);
            transform: translateX(-5px);
        }

        /* Plan Header */
        .plan-header {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: var(--shadow);
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

        .plan-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: var(--food-gradient);
        }

        .plan-title-section {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 25px;
        }

        .plan-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2.8rem;
            font-weight: 700;
            color: #2d3748;
            line-height: 1.2;
        }

        .plan-day {
            background: var(--health-gradient);
            color: #1e293b;
            padding: 12px 25px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Stats Overview */
        .stats-overview {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }

        .stat-card {
            background: linear-gradient(135deg, rgba(248, 250, 252, 0.9), rgba(241, 245, 249, 0.9));
            border-radius: 20px;
            padding: 25px;
            text-align: center;
            transition: var(--transition);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

        .stat-icon {
            width: 60px;
            height: 60px;
            margin: 0 auto 15px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            color: white;
        }

        .calorie-stat .stat-icon {
            background: var(--food-gradient);
        }

        .meal-stat .stat-icon {
            background: var(--protein-gradient);
        }

        .day-stat .stat-icon {
            background: var(--carb-gradient);
        }

        .stat-value {
            font-size: 2.2rem;
            font-weight: 700;
            color: #1e293b;
            margin: 10px 0;
        }

        .stat-label {
            color: #64748b;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 20px;
            margin: 30px 0;
            flex-wrap: wrap;
        }

        .btn {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            padding: 16px 32px;
            border-radius: 15px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            font-size: 1.1rem;
            justify-content: center;
        }

        .btn-primary {
            background: var(--health-gradient);
            color: #1e293b;
            box-shadow: 0 5px 15px rgba(132, 250, 176, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 25px rgba(132, 250, 176, 0.4);
        }

        .btn-danger {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            color: white;
            box-shadow: 0 5px 15px rgba(255, 107, 107, 0.3);
        }

        .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 25px rgba(255, 107, 107, 0.4);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: white;
            border: 2px solid white;
        }

        .btn-secondary:hover {
            background: white;
            color: #1e293b;
            transform: translateY(-3px);
        }

        /* Meals Section */
        .meals-section {
            margin: 40px 0;
        }

        .section-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }

        .section-icon {
            width: 70px;
            height: 70px;
            background: var(--food-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
        }

        .section-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2.2rem;
            color: white;
            text-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        /* Meal Cards - SIMPLIFIED FOR YOUR ENTITY */
        .meal-card {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 35px;
            margin-bottom: 25px;
            box-shadow: var(--shadow);
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

        .meal-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
        }

        .breakfast-card::before {
            background: var(--breakfast-gradient);
        }

        .lunch-card::before {
            background: var(--lunch-gradient);
        }

        .dinner-card::before {
            background: var(--dinner-gradient);
        }

        .snack-card::before {
            background: var(--health-gradient);
        }

        .meal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        /* FIXED: Use meal.title */
        .meal-name {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.8rem;
            font-weight: 700;
            color: #2d3748;
        }

        .meal-calories {
            background: rgba(132, 250, 176, 0.2);
            color: #10b981;
            padding: 10px 20px;
            border-radius: 20px;
            font-weight: 700;
            font-size: 1.2rem;
        }

        .meal-description {
            color: #4a5568;
            line-height: 1.7;
            font-size: 1.1rem;
            margin-bottom: 25px;
            padding: 20px;
            background: #f8fafc;
            border-radius: 15px;
            border-left: 4px solid #84fab0;
        }

        /* Meal Type Badge */
        .meal-type {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            border-radius: 15px;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 15px;
        }

        .breakfast-type {
            background: var(--breakfast-gradient);
            color: white;
        }

        .lunch-type {
            background: var(--lunch-gradient);
            color: white;
        }

        .dinner-type {
            background: var(--dinner-gradient);
            color: white;
        }

        .snack-type {
            background: var(--health-gradient);
            color: #1e293b;
        }

        /* Empty State */
        .empty-meals {
            text-align: center;
            padding: 60px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            border: 2px dashed rgba(255, 255, 255, 0.3);
            margin: 30px 0;
        }

        .empty-meals-icon {
            font-size: 4rem;
            margin-bottom: 20px;
            color: rgba(255, 255, 255, 0.5);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .plan-title {
                font-size: 2rem;
            }

            .stats-overview {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }

            .meal-card {
                padding: 25px;
            }
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .plan-header, .meal-card {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Meal Time Indicator */
        .meal-time {
            position: absolute;
            top: 30px;
            right: 30px;
            padding: 8px 20px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .breakfast-time {
            background: var(--breakfast-gradient);
            color: white;
        }

        .lunch-time {
            background: var(--lunch-gradient);
            color: white;
        }

        .dinner-time {
            background: var(--dinner-gradient);
            color: white;
        }
    </style>
</head>
<body>
<div class="container">
    <a href="{{ path('app_meal_plan_index') }}" class="back-btn">
        <i class="fas fa-arrow-left"></i>
        Back to All Meal Plans
    </a>

    <!-- Plan Header -->
    <div class="plan-header">
        <div class="plan-title-section">
            <!-- FIXED: Use meal_plan.title -->
            <h1 class="plan-title">{{ meal_plan.title }}</h1>
            <span class="plan-day">{{ meal_plan.day }}</span>
        </div>

        <!-- Stats Overview - SIMPLIFIED FOR YOUR ENTITY -->
        <div class="stats-overview">
            <div class="stat-card calorie-stat">
                <div class="stat-icon">
                    <i class="fas fa-fire"></i>
                </div>
                <div class="stat-value">{{ meal_plan.totalCalories }}</div>
                <div class="stat-label">Total Calories</div>
            </div>

            <div class="stat-card meal-stat">
                <div class="stat-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <div class="stat-value">{{ meal_plan.meals|length }}</div>
                <div class="stat-label">Total Meals</div>
            </div>

            <div class="stat-card day-stat">
                <div class="stat-icon">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="stat-value">{{ meal_plan.day }}</div>
                <div class="stat-label">Day</div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="{{ path('app_meal_plan_pdf', {'id': meal_plan.id}) }}" class="btn btn-danger">
                <i class="fas fa-file-pdf"></i>
                Download PDF
            </a>
            <a href="{{ path('app_meal_plan_index') }}" class="btn btn-secondary">
                <i class="fas fa-list"></i>
                Back to List
            </a>
        </div>
    </div>

    <!-- Meals Section - UPDATED FOR YOUR ENTITY -->
    <div class="meals-section">
        <div class="section-header">
            <div class="section-icon">
                <i class="fas fa-utensils"></i>
            </div>
            <h2 class="section-title">Today's Meals</h2>
        </div>

        {% if meal_plan.meals is empty %}
            <div class="empty-meals">
                <div class="empty-meals-icon">
                    <i class="fas fa-utensil-spoon"></i>
                </div>
                <h3 style="color: white; margin-bottom: 15px;">No Meals Found</h3>
                <p style="color: rgba(255, 255, 255, 0.8);">No meals have been added to this plan yet.</p>
            </div>
        {% else %}
            {% for meal in meal_plan.meals %}
                {% set mealType = meal.type|default('snack')|lower %}
                {% set cardClass = 'meal-card' %}
                {% set timeClass = 'meal-time' %}
                {% set typeClass = 'meal-type' %}

                {% if 'breakfast' in mealType %}
                    {% set cardClass = cardClass ~ ' breakfast-card' %}
                    {% set timeClass = timeClass ~ ' breakfast-time' %}
                    {% set typeClass = typeClass ~ ' breakfast-type' %}
                {% elseif 'lunch' in mealType %}
                    {% set cardClass = cardClass ~ ' lunch-card' %}
                    {% set timeClass = timeClass ~ ' lunch-time' %}
                    {% set typeClass = typeClass ~ ' lunch-type' %}
                {% elseif 'dinner' in mealType %}
                    {% set cardClass = cardClass ~ ' dinner-card' %}
                    {% set timeClass = timeClass ~ ' dinner-time' %}
                    {% set typeClass = typeClass ~ ' dinner-type' %}
                {% else %}
                    {% set cardClass = cardClass ~ ' snack-card' %}
                    {% set timeClass = timeClass ~ ' breakfast-time' %}
                    {% set typeClass = typeClass ~ ' snack-type' %}
                {% endif %}

                <div class="{{ cardClass }}">
                    <div class="meal-header">
                        <!-- FIXED: Use meal.title -->
                        <h3 class="meal-name">{{ meal.title }}</h3>
                        <div class="{{ timeClass }}">
                            {{ meal.type|default('Snack') }}
                        </div>
                    </div>

                    <div class="meal-calories">
                        {{ meal.calories }} kcal
                    </div>

                    {% if meal.description %}
                        <div class="meal-description">
                            {{ meal.description|nl2br }}
                        </div>
                    {% endif %}

                    <div class="{{ typeClass }}">
                        <i class="fas fa-{{ meal.type == 'breakfast' ? 'sun' : (meal.type == 'lunch' ? 'cloud-sun' : (meal.type == 'dinner' ? 'moon' : 'seedling')) }}"></i>
                        {{ meal.type|default('Snack')|title }}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
</div>

<script>
    // Print functionality
    function printMealPlan() {
        window.print();
    }

    // Share functionality
    function shareMealPlan() {
        if (navigator.share) {
            navigator.share({
                title: '{{ meal_plan.title }}',
                text: 'Check out this meal plan from FitFlow!',
                url: window.location.href
            });
        } else {
            navigator.clipboard.writeText(window.location.href);
            alert('Link copied to clipboard!');
        }
    }

    // Add meal check functionality
    document.addEventListener('DOMContentLoaded', function() {
        const mealCards = document.querySelectorAll('.meal-card');
        mealCards.forEach(card => {
            const checkBtn = document.createElement('button');
            checkBtn.innerHTML = '<i class="fas fa-check"></i> Mark as Completed';
            checkBtn.style.cssText = `
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    margin-top: 20px;
                    padding: 12px 24px;
                    background: var(--health-gradient);
                    color: #1e293b;
                    border: none;
                    border-radius: 10px;
                    font-weight: 600;
                    cursor: pointer;
                    transition: all 0.3s ease;
                `;

            checkBtn.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
            });

            checkBtn.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });

            checkBtn.addEventListener('click', function() {
                this.innerHTML = '<i class="fas fa-check-circle"></i> Completed!';
                this.style.background = '#10b981';
                this.style.color = 'white';
                card.style.boxShadow = '0 0 20px rgba(16, 185, 129, 0.3)';

                // Check if all meals are completed
                const completedMeals = document.querySelectorAll('button[style*="background: rgb(16, 185, 129)"]');
                if (completedMeals.length === mealCards.length) {
                    alert('ðŸŽ‰ Congratulations! You\'ve completed all meals for today!');
                }
            });

            card.appendChild(checkBtn);
        });
    });
</script>
</body>
</html>
