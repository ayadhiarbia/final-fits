<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log New Progress - FitFlow</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success-gradient: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
            --progress-gradient: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            --dark-bg: #0f172a;
            --light-text: #f8fafc;
            --card-bg: rgba(255, 255, 255, 0.95);
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(-45deg, #1a2980, #26d0ce);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            min-height: 100vh;
            color: #333;
            padding-bottom: 60px;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Back Button */
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 30px;
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            padding: 12px 25px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .back-btn:hover {
            gap: 15px;
            background: rgba(255, 255, 255, 0.2);
            transform: translateX(-5px);
        }

        /* Form Container */
        .form-container {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 40px;
            box-shadow: var(--shadow);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .form-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .form-header h1 {
            font-family: 'Montserrat', sans-serif;
            font-size: 2.5rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
        }

        .form-header p {
            color: #64748b;
            font-size: 1.1rem;
        }

        /* Form Groups */
        .form-group {
            margin-bottom: 30px;
        }

        .form-label {
            display: block;
            font-weight: 600;
            margin-bottom: 10px;
            color: #2d3748;
            font-size: 1.1rem;
        }

        .form-label i {
            margin-right: 10px;
            color: #667eea;
        }

        .form-control {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid #e2e8f0;
            border-radius: 12px;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            transition: var(--transition);
            background: #f8fafc;
        }

        .form-control:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            background: white;
        }

        .form-text {
            margin-top: 8px;
            color: #94a3b8;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .form-text i {
            color: #64748b;
        }

        .form-error {
            margin-top: 8px;
            color: #ef4444;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        /* File Upload */
        .file-upload-container {
            position: relative;
        }

        .file-upload-label {
            display: block;
            padding: 40px;
            border: 3px dashed #cbd5e1;
            border-radius: 15px;
            text-align: center;
            cursor: pointer;
            transition: var(--transition);
            background: #f8fafc;
        }

        .file-upload-label:hover {
            border-color: #667eea;
            background: #f1f5f9;
        }

        .file-upload-label.drag-over {
            border-color: #667eea;
            background: rgba(102, 126, 234, 0.1);
        }

        .upload-icon {
            font-size: 3rem;
            color: #94a3b8;
            margin-bottom: 15px;
        }

        .file-upload-text h4 {
            color: #475569;
            margin-bottom: 5px;
        }

        .file-upload-text p {
            color: #94a3b8;
            font-size: 0.9rem;
        }

        .file-preview {
            margin-top: 20px;
            text-align: center;
        }

        .file-preview img {
            max-width: 200px;
            max-height: 200px;
            border-radius: 10px;
            box-shadow: var(--shadow);
        }

        /* Textarea */
        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        /* Date Display */
        .current-date {
            background: var(--success-gradient);
            padding: 15px;
            border-radius: 12px;
            text-align: center;
            margin: 20px 0;
            color: #1e293b;
            font-weight: 600;
        }

        .current-date i {
            margin-right: 10px;
        }

        /* Button Styles */
        .btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 15px 30px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            font-size: 1rem;
            justify-content: center;
        }

        .btn-primary {
            background: var(--success-gradient);
            color: #1e293b;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 25px rgba(132, 250, 176, 0.3);
        }

        .btn-secondary {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            color: #667eea;
            border: 2px solid #667eea;
        }

        .btn-secondary:hover {
            background: #667eea;
            color: white;
            transform: translateY(-3px);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 20px;
            margin-top: 40px;
            flex-wrap: wrap;
        }

        /* Tips Section */
        .tips-section {
            background: rgba(102, 126, 234, 0.1);
            border-radius: 15px;
            padding: 25px;
            margin-top: 40px;
            border-left: 4px solid #667eea;
        }

        .tips-header {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 15px;
            color: #667eea;
        }

        .tips-list {
            list-style: none;
            padding-left: 0;
        }

        .tips-list li {
            padding: 10px 0;
            color: #475569;
            display: flex;
            align-items: flex-start;
            gap: 10px;
        }

        .tips-list li i {
            color: #667eea;
            margin-top: 3px;
        }

        /* Weight History */
        .weight-history {
            background: rgba(132, 250, 176, 0.1);
            border-radius: 15px;
            padding: 25px;
            margin-top: 30px;
        }

        .weight-history h4 {
            color: #10b981;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .history-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .history-item:last-child {
            border-bottom: none;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .form-container {
                padding: 25px;
            }

            .form-header h1 {
                font-size: 2rem;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn {
                width: 100%;
            }
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .form-container {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Loading State */
        .loading {
            opacity: 0.7;
            pointer-events: none;
        }

        .spinner {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255,255,255,.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 1s ease-in-out infinite;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        /* Success Message */
        .success-message {
            position: fixed;
            top: 20px;
            right: 20px;
            background: var(--success-gradient);
            color: #1e293b;
            padding: 20px;
            border-radius: 12px;
            box-shadow: var(--shadow);
            display: flex;
            align-items: center;
            gap: 15px;
            z-index: 1000;
            animation: slideInRight 0.3s ease-out;
        }

        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <a href="{{ path('app_progress_index') }}" class="back-btn">
        <i class="fas fa-arrow-left"></i>
        Back to Progress Tracker
    </a>

    <div class="form-container">
        <div class="form-header">
            <h1>Log Your Progress</h1>
            <p>Track your fitness journey and celebrate every milestone</p>
        </div>

        <div class="current-date">
            <i class="fas fa-calendar-day"></i>
            Today: {{ "now"|date("F j, Y • g:i A") }}
        </div>

        {{ form_start(form, {'attr': {'id': 'progress-form', 'enctype': 'multipart/form-data'}}) }}

        <!-- Weight Input -->
        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-weight-scale"></i>
                Weight (kg)
            </label>
            {{ form_widget(form.weight, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter your current weight in kilograms',
                'min': '20',
                'max': '200',
                'step': '0.1'
            }}) }}
            <div class="form-text">
                <i class="fas fa-info-circle"></i>
                Enter your current weight in kilograms (e.g., 75.5)
            </div>
            <div class="form-error">
                {{ form_errors(form.weight) }}
            </div>
        </div>

        <!-- Photo Upload -->
        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-camera"></i>
                Progress Photo
            </label>
            <div class="file-upload-container">
                <label for="{{ form.photo.vars.id }}" class="file-upload-label" id="file-upload-label">
                    <div class="upload-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <div class="file-upload-text">
                        <h4>Upload Progress Photo</h4>
                        <p>Click or drag & drop your photo here</p>
                        <p><small>Supports JPG, PNG • Max 5MB</small></p>
                    </div>
                </label>
                {{ form_widget(form.photo, {'attr': {
                    'class': 'form-control',
                    'accept': 'image/*',
                    'style': 'display: none;'
                }}) }}
            </div>
            <div class="file-preview" id="file-preview"></div>
            <div class="form-text">
                <i class="fas fa-lightbulb"></i>
                Upload a photo to visually track your progress over time
            </div>
            <div class="form-error">
                {{ form_errors(form.photo) }}
            </div>
        </div>

        <!-- Notes -->
        <div class="form-group">
            <label class="form-label">
                <i class="fas fa-sticky-note"></i>
                Notes
            </label>
            {{ form_widget(form.note, {'attr': {
                'class': 'form-control',
                'placeholder': 'How are you feeling today? Any achievements or observations?',
                'rows': '5'
            }}) }}
            <div class="form-text">
                <i class="fas fa-quote-right"></i>
                Optional: Add notes about your mood, energy levels, or specific achievements
            </div>
            <div class="form-error">
                {{ form_errors(form.note) }}
            </div>
        </div>

        <!-- Tips Section -->
        <div class="tips-section">
            <div class="tips-header">
                <i class="fas fa-lightbulb"></i>
                <h4>Tips for Effective Progress Tracking</h4>
            </div>
            <ul class="tips-list">
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Weigh yourself at the same time each day (preferably in the morning)</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Use consistent lighting for progress photos</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Note any changes in energy, strength, or mood</span>
                </li>
                <li>
                    <i class="fas fa-check-circle"></i>
                    <span>Celebrate non-scale victories too!</span>
                </li>
            </ul>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <button type="submit" class="btn btn-primary" id="submit-btn">
                <i class="fas fa-save"></i>
                Save Progress Log
            </button>
            <a href="{{ path('app_progress_index') }}" class="btn btn-secondary">
                <i class="fas fa-times"></i>
                Cancel
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<script>
    // File Upload Handling
    const fileInput = document.getElementById('{{ form.photo.vars.id }}');
    const fileLabel = document.getElementById('file-upload-label');
    const filePreview = document.getElementById('file-preview');

    fileLabel.addEventListener('click', () => fileInput.click());

    fileLabel.addEventListener('dragover', (e) => {
        e.preventDefault();
        fileLabel.classList.add('drag-over');
    });

    fileLabel.addEventListener('dragleave', () => {
        fileLabel.classList.remove('drag-over');
    });

    fileLabel.addEventListener('drop', (e) => {
        e.preventDefault();
        fileLabel.classList.remove('drag-over');
        if (e.dataTransfer.files.length) {
            fileInput.files = e.dataTransfer.files;
            handleFileSelect(e.dataTransfer.files[0]);
        }
    });

    fileInput.addEventListener('change', (e) => {
        if (e.target.files.length) {
            handleFileSelect(e.target.files[0]);
        }
    });

    function handleFileSelect(file) {
        if (!file.type.match('image.*')) {
            alert('Please select an image file');
            return;
        }

        if (file.size > 5 * 1024 * 1024) {
            alert('File size must be less than 5MB');
            return;
        }

        const reader = new FileReader();
        reader.onload = (e) => {
            filePreview.innerHTML = `
                    <div style="margin-bottom: 10px; color: #475569; font-weight: 600;">
                        <i class="fas fa-image me-1"></i> Selected: ${file.name}
                    </div>
                    <img src="${e.target.result}" alt="Preview" style="max-width: 200px; max-height: 200px; border-radius: 10px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                    <div style="margin-top: 10px; color: #94a3b8; font-size: 0.9rem;">
                        <i class="fas fa-info-circle me-1"></i> Size: ${(file.size / 1024 / 1024).toFixed(2)} MB
                    </div>
                `;
        };
        reader.readAsDataURL(file);
    }

    // Form Submission
    const form = document.getElementById('progress-form');
    const submitBtn = document.getElementById('submit-btn');

    form.addEventListener('submit', function(e) {
        // Validate weight
        const weightInput = document.getElementById('{{ form.weight.vars.id }}');
        const weight = parseFloat(weightInput.value);

        if (isNaN(weight) || weight < 20 || weight > 200) {
            e.preventDefault();
            alert('Please enter a valid weight between 20 and 200 kg');
            weightInput.focus();
            return;
        }

        // Show loading state
        submitBtn.innerHTML = `
                <div class="spinner"></div>
                Saving...
            `;
        submitBtn.classList.add('loading');
    });

    // Auto-save form data to localStorage
    form.addEventListener('input', function() {
        const formData = {
            weight: document.getElementById('{{ form.weight.vars.id }}').value,
            note: document.getElementById('{{ form.note.vars.id }}').value
        };
        localStorage.setItem('progressFormDraft', JSON.stringify(formData));
    });

    // Load draft on page load
    window.addEventListener('load', function() {
        const draft = localStorage.getItem('progressFormDraft');
        if (draft) {
            const data = JSON.parse(draft);
            document.getElementById('{{ form.weight.vars.id }}').value = data.weight || '';
            document.getElementById('{{ form.note.vars.id }}').value = data.note || '';

            // Ask user if they want to restore draft
            if (data.weight || data.note) {
                if (confirm('You have a saved draft. Would you like to restore it?')) {
                    console.log('Draft restored');
                } else {
                    localStorage.removeItem('progressFormDraft');
                }
            }
        }
    });

    // Clear draft on successful submission
    form.addEventListener('submit', function() {
        localStorage.removeItem('progressFormDraft');
    });

    // Weight validation with visual feedback
    const weightInput = document.getElementById('{{ form.weight.vars.id }}');
    weightInput.addEventListener('input', function() {
        const weight = parseFloat(this.value);
        if (!isNaN(weight)) {
            if (weight < 30) {
                this.style.borderColor = '#ef4444';
                this.style.backgroundColor = '#fef2f2';
            } else if (weight > 150) {
                this.style.borderColor = '#f59e0b';
                this.style.backgroundColor = '#fffbeb';
            } else {
                this.style.borderColor = '#10b981';
                this.style.backgroundColor = '#f0fdf4';
            }
        }
    });

    // Character counter for notes
    const noteInput = document.getElementById('{{ form.note.vars.id }}');
    const noteCounter = document.createElement('div');
    noteCounter.className = 'form-text';
    noteCounter.style.display = 'flex';
    noteCounter.style.justifyContent = 'space-between';
    noteCounter.innerHTML = `
            <span><i class="fas fa-keyboard"></i> Add your notes here</span>
            <span id="char-count">0/500</span>
        `;
    noteInput.parentNode.insertBefore(noteCounter, noteInput.nextSibling);

    noteInput.addEventListener('input', function() {
        const count = this.value.length;
        const charCount = document.getElementById('char-count');
        charCount.textContent = `${count}/500`;

        if (count > 450) {
            charCount.style.color = '#f59e0b';
        } else if (count > 490) {
            charCount.style.color = '#ef4444';
        } else {
            charCount.style.color = '#94a3b8';
        }
    });

    // Trigger input to update counter on load
    noteInput.dispatchEvent(new Event('input'));
</script>
</body>
</html>
