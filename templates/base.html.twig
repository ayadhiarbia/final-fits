<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Fitness & Meal Plan Generator{% endblock %}</title>

    {% block stylesheets %}{% endblock %}
</head>
{% block javascripts %}{% endblock %}
<body>
<div class="navbar">
    <div class="logo">ðŸ’ª FitGen</div>
    <div>
        <a href="{{ path('app_home') }}">Home</a>
        {% if app.user %}
            <a href="{{ path('app_meal_plan_index') }}">Meal Plans</a>
            <a href="{{ path('app_workout_index') }}">Workouts</a>
            <a href="{{ path('app_progress_index') }}">Progress</a>
            <a href="{{ path('app_logout') }}">Logout ({{ app.user.userIdentifier }})</a>
        {% else %}
            <a href="{{ path('app_login') }}">Login</a>

        {% endif %}
    </div>
</div>
<div class="container">
    {% for message in app.flashes('success') %}
        <div class="flash-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="flash-error">{{ message }}</div>
    {% endfor %}
    {% block body %}{% endblock %}
</div>
</body>
</html>
