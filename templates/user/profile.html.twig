                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {{ form_label(form.goal, 'Fitness Goal', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="input-group">
                                            <span class="input-group-text" style="background: rgba(255, 157, 92, 0.1); border-color: #e6e6ff; border-right: none;">
                                                <i class="fas fa-flag text-warning"></i>
                                            </span>
                                        {{ form_widget(form.goal, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    </div>
                                    <div class="form-text text-muted mt-2">
                                        <i class="fas fa-info-circle me-1"></i> What's your main fitness goal?
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {{ form_label(form.activityLevel, 'Activity Level', {'label_attr': {'class': 'form-label'}}) }}
                                    <div class="input-group">
                                            <span class="input-group-text" style="background: rgba(255, 157, 92, 0.1); border-color: #e6e6ff; border-right: none;">
                                                <i class="fas fa-fire text-warning"></i>
                                            </span>
                                        {{ form_widget(form.activityLevel, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                    </div>
                                    <div class="form-text text-muted mt-2">
                                        <i class="fas fa-info-circle me-1"></i> How active are you daily?
                                    </div>
                                </div>
                            </div>
                        </div>
