                                    <div class="input-group">
                                            <span class="input-group-text" style="background: rgba(66, 226, 184, 0.1); border-color: #e6e6ff; border-right: none;">
                                                <i class="fas fa-ruler-vertical text-success"></i>
                                            </span>
                                        {{ form_widget(form.height, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'e.g., 175'}}) }}
                                        <span class="input-group-text" style="background: rgba(66, 226, 184, 0.1); border-color: #e6e6ff; border-left: none;">
