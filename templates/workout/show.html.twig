<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ workout.title }} - FitFlow</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --energy-gradient: linear-gradient(135deg, #ff9a9e 0%, #fad0c4 100%);
            --strength-gradient: linear-gradient(135deg, #a1c4fd 0%, #c2e9fb 100%);
            --cardio-gradient: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            --flexibility-gradient: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%);
            --dark-bg: #0f172a;
            --light-text: #f8fafc;
            --card-bg: rgba(255, 255, 255, 0.95);
            --shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            min-height: 100vh;
            color: #333;
            padding-bottom: 60px;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header Styles */
        .header {
            text-align: center;
            padding: 40px 20px;
            position: relative;
            overflow: hidden;
        }

        .header h1 {
            font-family: 'Montserrat', sans-serif;
            font-size: 3rem;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            position: relative;
            display: inline-block;
        }

        .header h1::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: var(--primary-gradient);
            border-radius: 2px;
        }

        /* Back Button */
        .back-btn {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 30px;
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            padding: 12px 25px;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .back-btn:hover {
            gap: 15px;
            background: rgba(255, 255, 255, 0.2);
            transform: translateX(-5px);
        }

        /* Detail Header */
        .detail-header {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: var(--shadow);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 25px;
        }

        .workout-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2.5rem;
            font-weight: 700;
            color: #2d3748;
            line-height: 1.2;
        }

        .workout-level {
            background: var(--secondary-gradient);
            color: white;
            padding: 8px 20px;
            border-radius: 25px;
            font-size: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .workout-type {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            background: rgba(102, 126, 234, 0.1);
            padding: 12px 25px;
            border-radius: 15px;
            margin: 15px 0 30px;
            color: #667eea;
            font-weight: 600;
            font-size: 1.1rem;
        }

        .workout-details {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin: 30px 0;
        }

        @media (min-width: 768px) {
            .workout-details {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        .detail-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            padding: 20px;
            background: linear-gradient(135deg, rgba(248, 250, 252, 0.9), rgba(241, 245, 249, 0.9));
            border-radius: 15px;
            transition: var(--transition);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .detail-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.1);
        }

        .detail-icon {
            width: 60px;
            height: 60px;
            background: var(--primary-gradient);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            margin-bottom: 15px;
        }

        .detail-content h4 {
            font-size: 0.9rem;
            color: #64748b;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .detail-content p {
            font-size: 1.4rem;
            font-weight: 700;
            color: #1e293b;
        }

        /* Workout Description */
        .workout-description {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 40px;
            margin: 30px 0;
            line-height: 1.8;
            font-size: 1.1rem;
            color: #4a5568;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .description-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
            color: #667eea;
        }

        .description-header i {
            font-size: 2.5rem;
        }

        .description-header h2 {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.8rem;
            font-weight: 600;
        }

        .description-content {
            padding: 20px;
            background: rgba(248, 250, 252, 0.5);
            border-radius: 15px;
            border-left: 4px solid #667eea;
        }

        /* Button Styles */
        .btn {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            padding: 15px 30px;
            border-radius: 12px;
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
            border: none;
            cursor: pointer;
            justify-content: center;
            font-size: 1rem;
        }

        .btn-primary {
            background: var(--primary-gradient);
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 25px rgba(102, 126, 234, 0.3);
        }

        .btn-secondary {
            background: var(--card-bg);
            color: #667eea;
            border: 2px solid #667eea;
        }

        .btn-secondary:hover {
            background: #667eea;
            color: white;
            transform: translateY(-3px);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 40px;
            flex-wrap: wrap;
        }

        /* Tips Section */
        .workout-tips {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 40px;
            margin: 30px 0;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .tips-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
            color: #f59e0b;
        }

        .tips-list {
            list-style: none;
            padding-left: 0;
        }

        .tips-list li {
            padding: 15px;
            margin-bottom: 10px;
            background: rgba(245, 158, 11, 0.1);
            border-radius: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
            border-left: 4px solid #f59e0b;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }

            .header h1 {
                font-size: 2rem;
            }

            .workout-title {
                font-size: 1.8rem;
            }

            .workout-details {
                grid-template-columns: 1fr;
            }

            .detail-header,
            .workout-description,
            .workout-tips {
                padding: 25px;
            }
        }

        /* Animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .detail-header, .workout-description, .workout-tips {
            animation: fadeInUp 0.6s ease-out;
        }

        /* Difficulty Indicator */
        .difficulty-meter {
            display: flex;
            gap: 5px;
            margin: 15px 0;
        }

        .difficulty-dot {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: #e2e8f0;
        }

        .difficulty-dot.active {
            background: var(--primary-gradient);
        }

        /* Progress Tracker */
        .progress-section {
            background: var(--card-bg);
            backdrop-filter: blur(10px);
            border-radius: 25px;
            padding: 30px;
            margin: 30px 0;
        }

        .progress-bar {
            height: 10px;
            background: #e2e8f0;
            border-radius: 5px;
            margin: 20px 0;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background: var(--primary-gradient);
            border-radius: 5px;
            width: 75%; /* Example progress */
        }
    </style>
</head>
<body>
<div class="container">
    <a href="{{ path('app_workout_index') }}" class="back-btn">
        <i class="fas fa-arrow-left"></i>
        Back to All Workouts
    </a>

    <div class="detail-header">
        <div class="card-header">
            <h1 class="workout-title">{{ workout.title }}</h1>
            <span class="workout-level">{{ workout.level }}</span>
        </div>

        <div class="workout-type">
            <i class="fas fa-fire"></i>
            {{ workout.type }}
        </div>

        <div class="workout-details">
            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="detail-content">
                    <h4>Duration</h4>
                    <p>{{ workout.duration }} min</p>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <div class="detail-content">
                    <h4>Calories</h4>
                    <p>{{ workout.caloriesBurned }} kcal</p>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-heartbeat"></i>
                </div>
                <div class="detail-content">
                    <h4>Intensity</h4>
                    <p>{{ workout.level }}</p>
                </div>
            </div>

            <div class="detail-item">
                <div class="detail-icon">
                    <i class="fas fa-dumbbell"></i>
                </div>
                <div class="detail-content">
                    <h4>Type</h4>
                    <p>{{ workout.type }}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="workout-description">
        <div class="description-header">
            <i class="fas fa-clipboard-list"></i>
            <h2>Workout Description</h2>
        </div>
        <div class="description-content">
            {{ workout.description|nl2br }}
        </div>
    </div>

    <div class="workout-tips">
        <div class="tips-header">
            <i class="fas fa-lightbulb"></i>
            <h2>Workout Tips</h2>
        </div>
        <ul class="tips-list">
            <li>
                <i class="fas fa-check-circle"></i>
                Warm up for 5-10 minutes before starting
            </li>
            <li>
                <i class="fas fa-check-circle"></i>
                Stay hydrated throughout your workout
            </li>
            <li>
                <i class="fas fa-check-circle"></i>
                Maintain proper form to prevent injuries
            </li>
            <li>
                <i class="fas fa-check-circle"></i>
                Cool down and stretch after completing the workout
            </li>
        </ul>
    </div>

    <div class="action-buttons">
        <a href="{{ path('app_workout_index') }}" class="btn btn-secondary">
            <i class="fas fa-list"></i>
            Browse More Workouts
        </a>
        <button class="btn btn-primary" onclick="startWorkout()">
            <i class="fas fa-play-circle"></i>
            Start This Workout
        </button>
    </div>
</div>

<script>
    function startWorkout() {
        alert('Starting workout: {{ workout.title }}! Get ready!');
        // Add timer functionality here
        let minutes = {{ workout.duration }};
        let seconds = 0;

        if (confirm(`Ready to start ${minutes}-minute workout?`)) {
            const timer = setInterval(() => {
                if (seconds === 0) {
                    if (minutes === 0) {
                        clearInterval(timer);
                        alert('Workout complete! Great job! ðŸŽ‰');
                        return;
                    }
                    minutes--;
                    seconds = 59;
                } else {
                    seconds--;
                }
                console.log(`Time remaining: ${minutes}:${seconds < 10 ? '0' : ''}${seconds}`);
            }, 1000);
        }
    }

    // Add dynamic difficulty visualization
    document.addEventListener('DOMContentLoaded', function() {
        const level = '{{ workout.level }}'.toLowerCase();
        const difficultyMeter = document.createElement('div');
        difficultyMeter.className = 'difficulty-meter';

        const levels = {
            'beginner': 1,
            'intermediate': 2,
            'advanced': 3,
            'expert': 4
        };

        for (let i = 1; i <= 4; i++) {
            const dot = document.createElement('div');
            dot.className = 'difficulty-dot';
            if (i <= levels[level] || levels[level]) {
                dot.classList.add('active');
            }
            difficultyMeter.appendChild(dot);
        }

        const header = document.querySelector('.workout-type');
        header.insertAdjacentElement('afterend', difficultyMeter);
    });
</script>
</body>
</html>
